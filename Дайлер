	// Запрос.УстановитьПараметр("НАЧАЛО", Дата(НачалоДня(ТекущаяДата())-1209600));
	// Запрос.УстановитьПараметр("КОНЕЦ", Дата(НачалоДня(ТекущаяДата())-604800));
