	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Mawson""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Asia/Baku""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Syowa""
	|				И Мероприятие.ПланируемаяДата В (&НАЧАЛО, &КОНЕЦ)
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""EET""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина"")
	|
	|УПОРЯДОЧИТЬ ПО
	|	Кредитор";
	
	// Установить параметры разреза дат
	Запрос.УстановитьПараметр("Д1", НачалоНедели(ТекущаяДата())-86400);
	Запрос.УстановитьПараметр("Д2", НачалоНедели(ТекущаяДата())-172800);
	Запрос.УстановитьПараметр("Д3", НачалоНедели(ТекущаяДата())-259200);
	Запрос.УстановитьПараметр("Д4", НачалоНедели(ТекущаяДата())-345600);
	Запрос.УстановитьПараметр("Д5", НачалоНедели(ТекущаяДата())-432000);
	Запрос.УстановитьПараметр("Д6", НачалоНедели(ТекущаяДата())-518400);
	Запрос.УстановитьПараметр("Д7", НачалоНедели(ТекущаяДата())-604800);
    Запрос.УстановитьПараметр("Д8", НачалоНедели(ТекущаяДата())-691200);
	Запрос.УстановитьПараметр("Д9", НачалоНедели(ТекущаяДата())-777600);
	Запрос.УстановитьПараметр("Д10", НачалоНедели(ТекущаяДата())-864000);
	Запрос.УстановитьПараметр("Д11", НачалоНедели(ТекущаяДата())-950400);
	Запрос.УстановитьПараметр("Д12", НачалоНедели(ТекущаяДата())-1036800);
	Запрос.УстановитьПараметр("Д13", НачалоНедели(ТекущаяДата())-1123200);
	Запрос.УстановитьПараметр("Д14", НачалоНедели(ТекущаяДата())-1209600);
