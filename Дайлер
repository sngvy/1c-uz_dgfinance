Процедура ФормированиеСписковАвтообзвона() Экспорт
	
	// Код от 08.04.22
	
	///////////////////////////////////////////////// 
	// Список по дальним регионам (МСК+4...МСК+9) //
	///////////////////////////////////////////////
	
	СписокАвтообзвона = Справочники.СписокДляАвтообзвона.СоздатьЭлемент();
	СписокАвтообзвона.Наименование = "Дальние регионы" + ЛЕВ(Строка(ТекущаяДата()),10);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ ПЕРВЫЕ 5000
	|	ДолговыеОбязательства.Ссылка КАК Ссылка,
	|	ДолговыеОбязательства.Кредитор КАК Кредитор
	|ИЗ
	|	Задача.Мероприятие КАК Мероприятие
	|		ПОЛНОЕ СОЕДИНЕНИЕ Справочник.ДолговыеОбязательства КАК ДолговыеОбязательства
	|		ПО Мероприятие.Объект = ДолговыеОбязательства.Ссылка
	|ГДЕ
	|	(ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/McMurdo""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Casey""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""AET""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Asia/Chita""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Asia/Brunei""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""ACT""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина""
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Davis""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
	|				И НЕ Мероприятие.Результат.Наименование = ""Автоответчик""
	|				И НЕ Мероприятие.Результат.Наименование = ""Тишина"")
	|
	|УПОРЯДОЧИТЬ ПО
	|	Кредитор";
	
	// Установить параметры разреза дат
	Запрос.УстановитьПараметр("Д1", НачалоНедели(ТекущаяДата())-86400);
	Запрос.УстановитьПараметр("Д2", НачалоНедели(ТекущаяДата())-172800);
	Запрос.УстановитьПараметр("Д3", НачалоНедели(ТекущаяДата())-259200);
	Запрос.УстановитьПараметр("Д4", НачалоНедели(ТекущаяДата())-345600);
	Запрос.УстановитьПараметр("Д5", НачалоНедели(ТекущаяДата())-432000);
	Запрос.УстановитьПараметр("Д6", НачалоНедели(ТекущаяДата())-518400);
	Запрос.УстановитьПараметр("Д7", НачалоНедели(ТекущаяДата())-604800);
    Запрос.УстановитьПараметр("Д8", НачалоНедели(ТекущаяДата())-691200);
	Запрос.УстановитьПараметр("Д9", НачалоНедели(ТекущаяДата())-777600);
	Запрос.УстановитьПараметр("Д10", НачалоНедели(ТекущаяДата())-864000);
	Запрос.УстановитьПараметр("Д11", НачалоНедели(ТекущаяДата())-950400);
	Запрос.УстановитьПараметр("Д12", НачалоНедели(ТекущаяДата())-1036800);
	Запрос.УстановитьПараметр("Д13", НачалоНедели(ТекущаяДата())-1123200);
	Запрос.УстановитьПараметр("Д14", НачалоНедели(ТекущаяДата())-1209600);
	// Конец
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Договор = Выборка.Ссылка.ПолучитьОбъект();
			стр = СписокАвтообзвона.Объекты.Добавить();
			стр.Объект = Договор.Ссылка;
			Должник = Договор.Должник.ПолучитьОбъект();
			Для каждого стр из Должник.Телефоны Цикл
				Если строка(стр.ВидТелефона) = "Мобильный" Тогда 
					стрТел = СписокАвтообзвона.СписокДляАО.Добавить();
					стрТел.Должник = Договор.Должник;
					стрТел.НомерТелефона = стр.Номер;
					// Фикс для нашей АТС
					стрТел.НомерТелефона = СтрСоединить(СтрРазделить(стр.Номер, "+( )"), "");
					// Конец
					стрТел.СтрокаАвтообзвона = Договор;
				КонецЕсли;
			КонецЦикла;
	КонецЦикла;
	
	// Прогоним еще один цикл, чтобы добавить должников, по которым ранее не было взаимодействия
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ ПЕРВЫЕ 5000
	|	ДолговыеОбязательства.Ссылка КАК Ссылка,
	|	ДолговыеОбязательства.Кредитор КАК Кредитор
	|ИЗ
	|	Задача.Мероприятие КАК Мероприятие
	|		ПОЛНОЕ СОЕДИНЕНИЕ Справочник.ДолговыеОбязательства КАК ДолговыеОбязательства
	|		ПО Мероприятие.Объект = ДолговыеОбязательства.Ссылка
	|ГДЕ
	|	(ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/McMurdo""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Casey""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""AET""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Asia/Chita""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Asia/Brunei""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""ACT""
	|				И Мероприятие.Ссылка is NULL
	|			ИЛИ ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Davis""
	|				И Мероприятие.Ссылка is NULL
	|
	|УПОРЯДОЧИТЬ ПО
	|	Кредитор";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Договор = Выборка.Ссылка.ПолучитьОбъект();
			стр = СписокАвтообзвона.Объекты.Добавить();
			стр.Объект = Договор.Ссылка;
			Должник = Договор.Должник.ПолучитьОбъект();
			Для каждого стр из Должник.Телефоны Цикл
				Если строка(стр.ВидТелефона) = "Мобильный" Тогда 
					стрТел = СписокАвтообзвона.СписокДляАО.Добавить();
					стрТел.Должник = Договор.Должник;
					стрТел.НомерТелефона = стр.Номер;
					// Фикс для нашей АТС
					стрТел.НомерТелефона = СтрСоединить(СтрРазделить(стр.Номер, "+( )"), "");
					// Конец
					стрТел.СтрокаАвтообзвона = Договор;
				КонецЕсли;
			КонецЦикла;
	КонецЦикла;
	
	//СписокАвтообзвона.Записать();
	ЗагрузитьНаСервере(СписокАвтообзвона);
	СписокАвтообзвона.Записать();
	
	//////////////////////////////////////////////////
	// Список по основным регионам (МСК-1...МСК+3) //
	////////////////////////////////////////////////
	
	СписокАвтообзвона = Справочники.СписокДляАвтообзвона.СоздатьЭлемент();
	СписокАвтообзвона.Наименование = "Основной" + ЛЕВ(Строка(ТекущаяДата()),10);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ ПЕРВЫЕ 5000
	|	ДолговыеОбязательства.Ссылка КАК Ссылка,
	|	ДолговыеОбязательства.Кредитор КАК Кредитор
	|ИЗ
	|	Задача.Мероприятие КАК Мероприятие
	|		ПОЛНОЕ СОЕДИНЕНИЕ Справочник.ДолговыеОбязательства КАК ДолговыеОбязательства
	|		ПО Мероприятие.Объект = ДолговыеОбязательства.Ссылка
	|ГДЕ
	|	(ДолговыеОбязательства.ДополнительныеРеквизиты.Значение.Наименование = ""В работе""
	|				И ДолговыеОбязательства.Должник.ЧасовойПояс = ""Antarctica/Vostok""
	|				И НЕ Мероприятие.ПланируемаяДата В (&Д1, &Д2, &Д3, &Д4, &Д5, &Д6, &Д7, &Д8, &Д9, &Д10, &Д11, &Д12, &Д13, &Д14)
