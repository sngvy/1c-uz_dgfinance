Процедура ФормированиеСписковАвтообзвонаФрагмент2(Знач Запрос, Знач СписокАвтообзвона)
	
	Перем Выборка, Договор, Должник, РезультатЗапроса, стр, стрТел;
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Договор = Выборка.Ссылка.ПолучитьОбъект();
		Если НЕ КонтрольСобытий.РезультативныеЗвонки(Договор.Должник) Тогда
			стр = СписокАвтообзвона.Объекты.Добавить();
			стр.Объект = Договор.Ссылка;
			Должник = Договор.Должник.ПолучитьОбъект();
			Для каждого стр из Должник.Телефоны Цикл
				Если строка(стр.ВидТелефона) = "Мобильный" Тогда 
					стрТел = СписокАвтообзвона.СписокДляАО.Добавить();
					стрТел.Должник = Договор.Должник;
					стрТел.НомерТелефона = стр.Номер;
					// Фикс для нашей АТС
					стрТел.НомерТелефона = СтрСоединить(СтрРазделить(стр.Номер, "+( )"), "");
					// Конец
					стрТел.СтрокаАвтообзвона = Договор;
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
	КонецЦикла;
	
	//СписокАвтообзвона.Записать();
	ЗагрузитьНаСервере(СписокАвтообзвона);
	СписокАвтообзвона.Записать();

КонецПроцедуры

Процедура ФормированиеСписковАвтообзвонаФрагмент1(Знач Запрос, Знач СписокАвтообзвона)
	
	Перем Выборка, Договор, Должник, РезультатЗапроса, стр, стрТел;
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Пока Выборка.Следующий() Цикл
		Договор = Выборка.Ссылка.ПолучитьОбъект();
		стр = СписокАвтообзвона.Объекты.Добавить();
		стр.Объект = Договор.Ссылка;
		Должник = Договор.Должник.ПолучитьОбъект();
		Для каждого стр из Должник.Телефоны Цикл
			Если строка(стр.ВидТелефона) = "Мобильный" Тогда 
				стрТел = СписокАвтообзвона.СписокДляАО.Добавить();
				стрТел.Должник = Договор.Должник;
				стрТел.НомерТелефона = стр.Номер;
				// Фикс для нашей АТС
				стрТел.НомерТелефона = СтрСоединить(СтрРазделить(стр.Номер, "+( )"), "");
				// Конец
				стрТел.СтрокаАвтообзвона = Договор;
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	//СписокАвтообзвона.Записать();
	ЗагрузитьНаСервере(СписокАвтообзвона);
	СписокАвтообзвона.Записать();

КонецПроцедуры

Процедура ФормированиеСписковАвтообзвонаФрагмент(Знач Запрос)
	
	Перем ГСЧ, СлучайноеЧисло;
	
	Если Формат(ТекущаяДата(), "ДФ=дддд") = "понедельник" Тогда
		ГСЧ = Новый ГенераторСлучайныхЧисел();
		СлучайноеЧисло = "%"+ГСЧ.СлучайноеЧисло(0, 1)+"%";
		Запрос.УстановитьПараметр("ГСЧ", СлучайноеЧисло);
	КонецЕсли;
	Если Формат(ТекущаяДата(), "ДФ=дддд") = "вторник" Тогда
		ГСЧ = Новый ГенераторСлучайныхЧисел();
		СлучайноеЧисло = "%"+ГСЧ.СлучайноеЧисло(2, 3)+"%";
		Запрос.УстановитьПараметр("ГСЧ", СлучайноеЧисло);
	КонецЕсли;
	Если Формат(ТекущаяДата(), "ДФ=дддд") = "среда" Тогда
		ГСЧ = Новый ГенераторСлучайныхЧисел();
		СлучайноеЧисло = "%"+ГСЧ.СлучайноеЧисло(4, 5)+"%";
		Запрос.УстановитьПараметр("ГСЧ", СлучайноеЧисло);
	КонецЕсли;
	Если Формат(ТекущаяДата(), "ДФ=дддд") = "четверг" Тогда
		ГСЧ = Новый ГенераторСлучайныхЧисел();
		СлучайноеЧисло = "%"+ГСЧ.СлучайноеЧисло(6, 7)+"%";
		Запрос.УстановитьПараметр("ГСЧ", СлучайноеЧисло);
	КонецЕсли;
	Если Формат(ТекущаяДата(), "ДФ=дддд") = "пятница" Тогда
		ГСЧ = Новый ГенераторСлучайныхЧисел();
		СлучайноеЧисло = "%"+ГСЧ.СлучайноеЧисло(8, 9)+"%";
		Запрос.УстановитьПараметр("ГСЧ", СлучайноеЧисло);
	КонецЕсли;

КонецПроцедуры
