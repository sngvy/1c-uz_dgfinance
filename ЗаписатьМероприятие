&НаКлиенте
Процедура ВыполнитьИЗакрыть(Команда)
	Отказ = Ложь;
	ПередВыполнением(Отказ);
	Если Не Отказ Тогда
		Попытка
			Закрыть();
		Исключение
		КонецПопытки;
	КонецЕсли;
	// Задержка выхода
	СтрокаЗапроса = "ping -n 1 -w "+Формат(1000 * 3, "ЧДЦ=0; ЧГ=") + " 10.10.0.16"; 
	WshShell = Новый COMОбъект("WScript.Shell"); 
	WshShell.Run(СтрокаЗапроса, 0, -1);
	// Вернуться на линию
    ФормаНабора = ПолучитьФорму("Обработка.бит_Битфон.Форма.ОсновнаяФорма");
	Если ФормаНабора.СтатусПодключен = Ложь Тогда
		ФормаНабора.КнПодключить(Неопределено);
	КонецЕсли;
КонецПроцедуры
