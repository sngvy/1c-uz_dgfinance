    Попытка
ДО = ОбъектВх.ПолучитьОбъект();
Сообщить(ДО);
СпрКат = Справочники.тсЗначенияСвойствОбъектов;
ЗначКат = СпрКат.НайтиПоНаименованию("Архив");
КодКат = "0181";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодКат, ЗначКат); 
Сообщить(ЗначКат);
СпрПрич = Справочники.тсЗначенияСвойствОбъектов;
ЗначПрич = СпрКат.НайтиПоНаименованию("Банкротство");
КодПрич = "0182";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодПрич, ЗначПрич); 
Сообщить(ЗначПрич);
ЗначПольз = ""; 
КодПольз = "0183";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодПольз, ЗначПольз);
Сообщить("ОК");
    Значение = "Выполнено";
Исключение
    Значение = "Ошибка";
КонецПопытки;


    Попытка
ДО = ОбъектВх.ПолучитьОбъект();
Сообщить(ДО);
СпрКат = Справочники.тсЗначенияСвойствОбъектов;
ЗначКат = СпрКат.НайтиПоНаименованию("В работе");
КодКат = "0181";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодКат, ЗначКат); 
Сообщить(ЗначКат);
ЗначПрич = "";
КодПрич = "0182";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодПрич, ЗначПрич);
ЗначПольз = ""; 
КодПольз = "0183";
ОбъектыСервер.ЗаписатьЗначениеСвойства(ОбъектВх, КодПольз, ЗначПольз);
Сообщить("ОК");
    Значение = "Выполнено";
Исключение
