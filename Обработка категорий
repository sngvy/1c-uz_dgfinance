    Попытка
ДО = ОбъектВх.Должник.ПолучитьОбъект();
Сообщить(ДО);
НовЧП = "Antarctica/Syowa";
ДО.ЧасовойПояс = НовЧП;
ДО.Записать();
Сообщить("Часовой пояс установлен");
    Значение = "Выполнено";
Исключение
    Значение = "Ошибка";
КонецПопытки;
