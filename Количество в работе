&НаСервере
Процедура КоличествоВРаботе(Команда)
	// Вставить содержимое обработчика.
	Запрос = Новый Запрос;
	
  Запрос.УстановитьПараметр("Сотрудник", ПараметрыСеанса.ТекущийПользователь);
	
  Запрос.Текст = 
	"ВЫБРАТЬ
	|	ОбъектыВРаботе.Объект.Ссылка КАК ОбъектСсылка
	|ИЗ
	|	РегистрНакопления.ОбъектыВРаботе КАК ОбъектыВРаботе
	|ГДЕ
	|	ОбъектыВРаботе.Сотрудник = &Сотрудник
	|";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	КоличествоЗаписей = Выборка.Количество();
	
	Сообщить("Договоров в работе: "+КоличествоЗаписей);
КонецПроцедуры
