Процедура ОбновлениеЧП() Экспорт
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ДолговыеОбязательства.Ссылка КАК Ссылка
	|ИЗ
	|	Справочник.ДолговыеОбязательства КАК ДолговыеОбязательства
	|
	|";
	РезультатЗапроса = Запрос.Выполнить().Выгрузить();
	Для Каждого Ссылка из РезультатЗапроса Цикл
		Должник = Ссылка.ПолучитьОбъект();
		ДолжникАдрес = ОбъектыСервер.ПолучитьЗначениеСвойства(Должник, "0098");
		Если СтрНайти(ДолжникАдрес, "Москва") > 0 Тогда
			Должник.ЧасовойПояс = "Antarctica/Syowa"
		    ДолжникОбъект.Записать();
		Иначе
    КонецЕсли;
	КонецЦикла;	
КонецПроцедуры
