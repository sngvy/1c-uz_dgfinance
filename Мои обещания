&НаСервере
Процедура МоиОбещанияНаСервере()
	// Получить пользователя ИБ
	ЭтаФорма.ПользовательИБ = ПользователиКлиентСервер.АвторизованныйПользователь();
КонецПроцедуры


&НаКлиенте
Процедура МоиОбещания(Команда)
	МоиОбещанияНаСервере();
	// Отбор
	ПараметрыОтбора = Новый Структура;
	ПараметрыОтбора.Вставить("Автор", ПользовательИБ);
	// Параметры
	ПараметрыФормы = Новый Структура;
	ПараметрыФормы.Вставить("Отбор", ПараметрыОтбора);
	// Открыть с ключом
	ОткрытьФорму("Документ.ОбещанныеПлатежи.Форма.ФормаСписка", ПараметрыФормы);
КонецПроцедуры
