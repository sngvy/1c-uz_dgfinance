&НаКлиенте
Процедура ЗавершитьРазговор(Команда)
	Попытка
		ФормаНабора = ПолучитьФорму("Обработка.бит_Битфон.Форма.ОсновнаяФорма");
		ФормаНабора.КнОтбой(Неопределено);
		Сигнал();
		ПоказатьОповещениеПользователя("БИТ.Phone",,"Разговор завершен",БиблиотекаКартинок.Информация32);
		Если ФормаНабора.СтатусПодключен = Истина Тогда
			ФормаНабора.КнОтключить(Неопределено);
		КонецЕсли;		
	Исключение
		Предупреждение("БИТ.Phone не подключен!");
	КонецПопытки
КонецПроцедуры

Для обработки оповещений:
	Если ИмяСобытия = "ЗвонокПрерван" Тогда 
		ФормаНабора = ПолучитьФорму("Обработка.бит_Битфон.Форма.ОсновнаяФорма");
		ФормаНабора.КнОтбой(Неопределено);
		// Чтобы ошибка не выскакивала
		Предупреждение("Пожалуйста, подождите...",1,);
		ФормаНабора.КнОтключить(Неопределено); 
	КонецЕсли;
